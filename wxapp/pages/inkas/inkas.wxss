/* pages/comment/comment.wxss */
.con{
  padding: 1rem;
  direction: ltr;
}
.item{
  display: flex;
  margin: 0.5rem 0;
}
.item>image{
  width: 2rem;
  height: 2rem;
  border-radius: 5px;
  flex-shrink:0;
  margin-right:5px;
}
.comms{
width: calc(100vw - 3.5rem - 10px);
display: flex;
justify-content: space-between;

}
.item>view{
  display: flex;
  flex-direction: column;
}
.comTop{
  display: flex;
  justify-content: space-between;
  margin:1rem 0;
  color: #666;
}
.name{
  color: #666;
}
.feedback{
  border-width: 0 0 0 3px;
  border-style: solid;
  border-color: #ccc;
  padding-left: 5px;
  display: flex;
  flex-direction: column;
}
.sys{
  color: #666;
  font-size: 0.9rem;
  margin-top: 0.5rem;
}
.like{
  display: flex;
align-items: center;
}
.like>image{
width:1.2rem;
height: 1.2rem;
}
.num{
  color: #1296db;
}
text{
  word-break: normal;
  word-wrap:break-word;
  }
  .comms2{
    width: calc(100vw - 4rem - 10px);
    display: flex;
    justify-content: space-between;
  }